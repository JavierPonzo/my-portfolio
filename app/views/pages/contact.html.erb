<main class="flex-shrink-0">
    <!-- Page content-->
    <section class="py-5">
        <div class="container px-5">
            <!-- Contact form-->
            <div class="bg-light rounded-4 py-5 px-4 px-md-5">
                <div class="text-center mb-5">
                    <div class="feature bg-primary bg-gradient-primary-to-secondary text-white rounded-3 mb-3">
                        <i class="bi bi-envelope"></i>
                    </div>
                    <h1 class="fw-bolder">Get in touch</h1>
                    <p class="lead fw-normal text-muted mb-0">Let's work together!</p>
                </div>
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-8 col-xl-6">
                        <%= form_with(url: pages_contact_path, method: :post, local: true) do |form| %>
                            <div class="form-floating mb-3">
                                <%= form.text_field :name, class: "form-control", placeholder: "Your name", required: true %>
                                <label for="name">Your Name</label>
                            </div>

                            <div class="form-floating mb-3">
                                <%= form.email_field :email, class: "form-control", placeholder: "Your email", required: true %>
                                <label for="email">Email</label>
                            </div>

                            <div class="form-floating mb-3">
                                <%= form.text_area :message, class: "form-control", placeholder: "Your message", rows: 4, required: true %>
                                <label for="message">Message</label>
                            </div>

                            <div class="d-grid">
                                <%= form.submit "Send Message", class: "btn btn-primary" %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
